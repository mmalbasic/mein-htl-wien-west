@page "/main"
@inject NavigationManager navManager

<PageTitle>Home</PageTitle>

<button type="button" class="btn btn-secondary" @onclick="@(() => RedirectTo("/report-problem-ticket"))">Create Problem</button>

<div>
    <div style="display:flex">
        <h6>Made by Team Cerasis</h6>
        <h6 style="margin-left: auto;">Last update date : 01/04/2025</h6>
    </div>
    <div class="select_box">
        <h3 class="content-center">Mein HTL wien west</h3>
        <h4 class="content-center">Meine Schul webseite</h4>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        font-family: 'Jost', sans-serif;
        color:white;
        background: linear-gradient(to bottom, #000000, #1a1a1a, #333333);
    }
    .bottom_menu {
        position: absolute;
        background: rgba(100, 100, 100, 0.7);
        bottom: 5%;
        left:0;
        padding:10px;
        width: 100%;
    }
    .select_box {
        margin: auto;
        background: rgba(50, 50, 50, 0.7);
        border-radius: 10px;
        box-shadow: 5px 20px 50px rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        width: fit-content;
        
    }
    .content-center {
        display: flex;
        justify-content: center;
    }
</style>

@code {
    private void RedirectTo(string page)
    {
        navManager.NavigateTo(page, true);
    }
}
