@page "/karte"

<PageTitle>Karte / Etagenauswahl</PageTitle>

<!-- Umschließendes Div mit lila Hintergrund -->
<div class="page-bg d-flex flex-column align-items-center pt-4 pb-4">

    <!-- Überschrift / Beschreibung -->
    <div class="container-fluid text-center">
        <h3 class="text-white mb-3">Karte / Etagenauswahl</h3>
        <p class="text-white mb-4">Wähle ein Stockwerk aus:</p>
    </div>

    <div class="toggle-container">
        @if (showFloors)
        {
                <div class="floorselection">
                    <button class="btn btn-dark floorselectionbtn">Dachgeschoss</button>
                    <button class="btn btn-dark floorselectionbtn">3. Stock</button>
                    <button class="btn btn-dark floorselectionbtn">2. Stock</button>
                    <button class="btn btn-dark floorselectionbtn">1. Stock</button>
                    <button class="btn btn-dark floorselectionbtn">Erdgeschoss</button>
                    <button class="floorselectionbtn btn btn-dark">Untergeschoss</button>
                </div>
        }
        <button class="floorbtn btn btn-dark" @onclick="ShowFloors">Untergeschoss</button>
    </div>

   @*  <!-- Liste der Stockwerke als schwarze Buttons (Bootstrap) -->
    <div class="d-flex flex-column" style="width: 90%; max-width: 600px;">
        @* <button class="btn btn-dark mb-3">Dachgeschoss</button>
        <button class="btn btn-dark mb-3">3. Stock</button>
        <button class="btn btn-dark mb-3">2. Stock</button>
        <button class="btn btn-dark mb-3">1. Stock</button>
        <button class="btn btn-dark mb-3">Erdgeschoss</button>
        <button class="btn btn-dark mb-3">Sockelgeschoss</button> 
        <button class="btn btn-dark mb-3 floorbtn" >Untergeschoss</button>
    </div> *@
</div>

<style>
  /* Gleicher Hintergrund (lila) wie deine anderen Seiten */
  html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background-color: #4e148c; 
  }

  .page-bg {
      min-height: 100vh;
      width: 100%;
      background-color: #4e148c;
      margin: 0;
  }

  .toggle-container {
      position: fixed;
      bottom: 60px; /* Annahme: Footer ist 60px hoch */
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 600px;
      display: flex;
      flex-direction: column;
  }

  /* Falls du hier noch Karten oder Glas-Effekte haben möchtest, 
     kannst du sie wie in "Neue Meldungen" definieren */
  .problem-card {
      background: rgba(50, 50, 50, 0.7);
      border: none;
      border-radius: 10px;
      box-shadow: 5px 20px 50px rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(10px);
      width: 90%;
      max-width: 600px;
  }

  .floorbtn
  {
      width: 100vw;
      height: 65px;
      left:0;
      margin-left: -9vw;
      margin-top: 545px;
      text-align: start;
      font-size: 24px;

  }

  /* Der "Meine"-Button – direkt am unteren Rand des Toggle-Containers */
  .floorbtn {
      width: 100vw;
      height: 65px;
      text-align: left;
      font-size: 24px;
      margin: 0;
      padding: 0 10px;
      margin-left: -5vw;
  }

  /* Container für die ausgeklappten Buttons – direkt über dem "Meine"-Button, ohne Abstand */
  .floorselection {
      display: flex;
      flex-direction: column;
  }

  /* Die ausgeklappten Buttons – ohne jeglichen vertikalen Abstand */
  .floorselectionbtn {
      width: 100vw;
      height: 50px;
      text-align: left;
      font-size: 24px;
      margin: 0;
      padding: 0 10px;
      border-radius: 0;
      margin-left: -5vw;
  }


  /* Beispiel: Weißer Text in Cards */
  .problem-card .card-title,
  .problem-card .card-text {
      color: white;
  }
</style>

@code
{
    private bool showFloors = false;

    private void ShowFloors()
    {
        showFloors = !showFloors;
    }
}
