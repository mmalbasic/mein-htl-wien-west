@page "/"
@inject NavigationManager navManager
@layout LoginLayout
@using MeinHTLWienWest.Components.Layout

@using MeinHTLWienWest.Services.Authentication

<PageTitle>Home</PageTitle>

<!-- Remove Auth when done testing -->

<!--
